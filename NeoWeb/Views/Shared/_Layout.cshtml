<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="robots" content="index,follow">
    <meta name="description" content='@Localizer["Neo is an open-source, community driven platform that is leveraging the intrinsic advantages of blockchain technology to realize the optimized digital world of the future."]'>
    <meta name="author" content="neo-project">
    <meta name="application-name" content="neo.org">
    <meta name="renderer" content="ie-stand">
    <meta name="keywords" content="@(ViewData["keywords"] ?? $"{ViewData["keywords"]},")Neo,Blockchain,智能经济,区块链">
    @{ var title = (ViewData["Title"] != null ? $"{ViewData["Title"]} - " : "") + Localizer["Neo Smart Economy"].Value;
                    var details = ViewData["Details"] ?? Localizer["Neo Smart Economy"].Value;
                    var image = (ViewData["Image"] ?? Helper.ToCDN("/images/twitter-img.jpg"));
                    var url = $"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}{Context.Request.QueryString}"; }
    <title>@title</title>
    <meta property="og:url" content="@url" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@title" />
    <meta property="og:description" content="@details" />
    <meta property="og:image" content="@image" />
    <meta name="twitter:title" content="@title" />
    <meta name="twitter:description" content="@details" />
    <meta name="twitter:image" content="@image" />
    <meta name="twitter:card" content="summary_large_image" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#00aba9">
    <meta name="theme-color" content="#ffffff">

    <link href="@Helper.ToCDN("/lib/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Helper.ToCDN("/css/site.min.css", true)" rel="stylesheet" />
    <style>
        @@font-face {
            font-family: 'WorkSans-Bold'; /* project id 1408484 */
            src: url('/font/WorkSans-Bold.ttf');
        }

        @@font-face {
            font-family: 'WorkSans-SemiBold';
            src: url('/font/WorkSans-SemiBold.ttf');
        }

        @@font-face {
            font-family: 'NunitoSans-ExtraBold';
            src: url('/font/NunitoSans-ExtraBold.ttf');
        }

        @@font-face {
            font-family: 'NunitoSans-Bold';
            src: url('/font/NunitoSans-Bold.ttf');
        }

        @@font-face {
            font-family: 'NunitoSans-Regular';
            src: url('/font/NunitoSans-Regular.ttf');
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body id="neo-body">
    <nav class="navbar container navbar-expand-lg">
        <a asp-controller="home" asp-action="index">
            <img src="@(Helper.CDN + (ViewBag.IsWhiteLogo != null ? "/images/logo files-white.svg" : "/images/logo files-dark.svg"))" alt="Neo Logo" />
        </a>
        <button class="navbar-toggler" type="button">
            <div class="special-button">
                <div class="top"></div>
                <div class="bottom"></div>
            </div>
        </button>

        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @Localizer["Discover Neo"]
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-action="index" asp-controller="about">@Localizer["Neo Defined"]</a>
                            <a class="dropdown-item" asp-action="index" asp-controller="technology">@Localizer["Technology"]</a>
                            <a class="dropdown-item" asp-action="index" asp-controller="neo-gas">@Localizer["NEO & GAS & Wallet"]</a>
                            <a class="dropdown-item" asp-action="index" asp-controller="contributors">@Localizer["Contributors & Collaborations"]</a>
                        </div>
                    </div>
                </li>
                <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="gov">@Localizer["Governance"]</a></li>
                <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="dev">@Localizer["Developer"]</a></li>
                <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="eco">@Localizer["Eco-Support"]</a></li>
                <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="news">@Localizer["News"]</a></li>

                @if (SharedLocalizer["en"].Value == "zh")
                {
                    <li class="nav-item nav-lang">
                        <a style="font-weight: 600" class="nav-link" href="javascript:" onclick="setLanguage('en-us')">EN</a> |
                        <a style="font-weight: 600" class="nav-link" href="javascript:" onclick="setLanguage('zh-cn')">中文</a>
                    </li>
 }
                else
                {
                    <li class="nav-item nav-lang">
                        <a style="font-size: 1em; font-weight: 600" class="nav-link" href="javascript:" onclick="setLanguage('en-us')">EN</a> |
                        <a style="font-size: .9em;  font-weight: 500" class="nav-link" href="javascript:" onclick="setLanguage('zh-cn')">中文</a>
                    </li>
}
            </ul>
        </div>
    </nav>
