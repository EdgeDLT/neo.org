@model NeoWeb.Models.FwLink
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["ParentTitle"] = SharedLocalizer["FwLink"].Value;
    ViewData["Title"] = "Delete FwLink";
}

<div class="py-5">
    <p>Are you sure you want to delete this?</p>
    <p class="mt-3">@Html.DisplayFor(model => model.Name)</p>
    <p class="mt-3" style="word-break: break-all">@Html.DisplayFor(model => model.Link)</p>
    <div class="mt-3">
        <div class="mt-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn mt-3" />
                <div class="mt-3">
                    <a asp-action="list">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
