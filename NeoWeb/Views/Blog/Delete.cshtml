@model NeoWeb.Models.Blog

@{
    ViewData["Title"] = "删除";
}
@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="/css/blog.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="@Helper.ToCDN("/css/blog.min.css", true)" />
    </environment>
}

<div class="container">
    <h3 class="mt-3">Are you sure you want to delete this?</h3>

    <div class="mt-2">
        @Html.DisplayFor(model => model.ChineseTitle)
    </div>
    <div class="mt-2">
        @Html.DisplayFor(model => model.EnglishTitle)
    </div>
    <div class="mt-2">
        @Html.Raw(Model.ChineseSummary)…
    </div>
    <div class="mt-2">
        @Html.Raw(Model.EnglishSummary)…
    </div>
    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-light" /> |
            <a asp-action="details" asp-route-id="@Model.Id">Back to Blog</a>
        </form>
    </div>
</div>