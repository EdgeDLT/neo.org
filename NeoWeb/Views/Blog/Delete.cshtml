@model NeoWeb.Models.Blog

@{
    ViewData["Title"] = "删除";
}
@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="/css/editor.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="@Helper.ToCDN("/css/editor.min.css", true)" />
    </environment>
}
<div class="container">
    <h3 class="mt-3">Are you sure you want to delete this?</h3>
    
    <div class="mt-2">
        @Html.DisplayFor(model => model.ChineseTitle)
    </div>
    <div class="mt-2">
        @Html.DisplayFor(model => model.EnglishTitle)
    </div>
    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="my-4">
                <input type="submit" value="Delete" class="btn btn-light" />
            </div>
            <div class="my-4">
                <a asp-action="index">Back to List</a>
            </div>
        </form>
    </div>
</div>