@model NeoWeb.Models.Blog
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["ParentTitle"] = SharedLocalizer["News"].Value;
    ViewData["Title"] = "Delete Blog";
}

<div class="py-5">
    <p>Are you sure you want to delete this?</p>
    <p class="mt-3">@Html.DisplayFor(model => model.ChineseTitle)</p>
    <p class="mt-3">@Html.DisplayFor(model => model.EnglishTitle)</p>
    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn mt-3" />
            <div class="mt-3">
                <a asp-action="index" asp-controller="news">Back to List</a>
            </div>
        </form>
    </div>
</div>
