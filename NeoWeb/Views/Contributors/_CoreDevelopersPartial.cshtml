@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

<h2 class="menu-page-title">Overview</h2>
<div class="menu-page-description">
    After four years of stable MainNet operation, Neo is undergoing it's biggest evolution as it migrates to N3 - The most powerful and feature rich version of the Neo blockchain to date.
</div>

<div class="people-card-container">
    @{
        string[,] people = new string[6, 6]
        {
            { "Erik Zhang", "张铮文", "Neo Founder", "Author of dBFT", "https://github.com/erikzhang", "https://www.linkedin.com/in/erik-zhang-5a6b14ab/" },
            { "Fernando Díaz Toledano", "SHARGON", "RED4SEC FOUNDER", "Expert in security", "https://github.com/shargon", "https://www.linkedin.com/in/fernando-diaz-toledano/" },
            { "Igor M. Coelho", "", "NEORESEARCH CO-FOUNDER", "Researcher & professor", "https://github.com/igormcoelho/", "https://www.linkedin.com/in/imcoelho/" },
            { "Victor Nazario Coelho", "", "NEORESEARCH CO-FOUNDER", "Researcher", "https://github.com/vncoelho", "https://www.linkedin.com/in/vitor-nazário-coelho-b76511a1/" },
            { "Roman Khimov", "", "NEO SPCC", "Principal Software Engineer", "https://github.com/roman-khimov", "" },
            { "Harry Pierson", "", "NGD ENTERPRISE", "Chief Architect", "https://github.com/devhawk", "https://www.linkedin.com/in/harrypierson/" }
        };


        for (int i = 0; i < people.GetLength(0); i++)
        {
        <div class="people-card">
            <img class="people-img" data-original="@Helper.ToCDN("/images/discover/placeholder.svg")" />

            <div class="people-content">
                <div class="col-name">
                    <div class="primary-name">@people[i, 0]</div>
                    @if (!String.IsNullOrEmpty(people[i, 1]))
                    {
                        <div class="secondary-name">@people[i, 1]</div>
                    }
                    @if (!String.IsNullOrEmpty(people[i, 2]))
                    {
                        <div class="title-name">@Localizer[people[i, 2]]</div>
                    }
                    @if (!String.IsNullOrEmpty(people[0, 3]))
                    {
                        <div class="people-description">@people[i, 3]</div>
                    }
                </div>
                <div class="col-icon">
                    @if (!String.IsNullOrEmpty(people[i, 4]))
                    {
                        <a href="@people[i, 4]" target="_blank"><i class="iconfont link-icon">&#xe609;</i></a>
                    }
                    @if (!String.IsNullOrEmpty(people[i, 5]))
                    {
                        <a href="@people[i, 5]" target="_blank"><i class="iconfont link-icon">&#xe609;</i></a>
                    }
                </div>
            </div>
        </div>
        }
    }
</div>
