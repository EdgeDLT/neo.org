@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Developer"];
}
@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="/css/testnet.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="@Helper.CDN/css/testnet.min.css" asp-append-version="true" />
    </environment>
    <link href="~/lib/Swiper/css/swiper.min.css" rel="stylesheet" />
}

<div class="dev-banner">
    <div class="container p2">
        <h2 class="m1">@Localizer["Developer"]</h2>
        <p class="m2 t3">
            <a class="btn-static btn2">@Localizer["Quick Start"]</a>
            <a class="btn-static btn2">@Localizer["Download"]</a>
        </p>
        <div class="dev-git m1">
            <a href="https://github.com/neo-project">
                <img src="images/neo-logo/72.png" />
                <span>The Neo Project</span>
            </a>
            <a class="btn-static btn4 flo-r" href="https://github.com/neo-project">fork on GitHub</a>
        </div>
    </div>
</div>

<div class="dev-content container">
    <h3 class="m3 bold-font p4">@Localizer["What you can build"]</h3>
    <ul class="dev-intro t4 m3">
        <li>
            <img class="p4" src="~/images/dev-icon-1.svg" /><br />
            <strong>@Localizer["Smart Contract"]</strong><br />
            <span>@Localizer["Building decentralized apps in the form of smart contracts"]</span>
        </li>
        <li>
            <img class="p4" src="~/images/dev-icon-2.svg" /><br />
            <strong>@Localizer["Wallet"]</strong><br />
            <span>@Localizer["Develop wallets that suport NEO, GAS, and other NEP-5 assets"]</span>
        </li>
        <li>
            <img class="p4" src="~/images/dev-icon-3.svg" /><br />
            <strong>@Localizer["Tools"]</strong><br />
            <span>@Localizer["Explorer, monitor, compiler and other blockchain tools"]</span>
        </li>
        <li>
            <img class="p4" src="~/images/dev-icon-4.svg" /><br />
            <strong>@Localizer["Gaming"]</strong><br />
            <span>@Localizer["Building blockchain games in NEO"]</span>
        </li>
        <li>
            <img class="p4" src="~/images/dev-icon-5.svg" /><br />
            <strong>@Localizer["Mint NEP-5 Tokens"]</strong><br />
            <span>@Localizer["Learn how to use smart contracts for mint NEP-5 Tokens"]</span>
        </li>
        <li>
            <img class="p4" src="~/images/dev-icon-6.svg" /><br />
            <strong>@Localizer["Exchange Integration"]</strong><br />
            <span>@Localizer["Document for Exchange Developers"]</span>
        </li>
    </ul>
</div>
<div class="dev-content container dev-apply">
    <div class="border-static back-white">
        <div class="row">
            <div class="col-md-4">
                <img src="~/images/dev-apply.svg" />
            </div>
            <div class="col-md-7 text-left m1">
                <h3 class="m3 bold-font p4">@Localizer["Apply For NEO/GAS in Testnet"]</h3>
                <p class="p4">
                    @Localizer["If you are developing a project in the NEO ecosystem, you'll need NEO/GAS for development. You can click the Apply button to fill out an application form, or get them automatically through our Faucet."]
                </p>
                <p>
                    <a class="btn-static btn3" href="/testcoin/apply">@Localizer["Apply"]</a>
                    <a class="btn-static btn3">@Localizer["Testnet Faucet"]</a>
                </p>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</div>
<div class="dev-content dev-doc">
    <div class="w600">
        <h3 class="m2 bold-font p4"><span class="back-static">@Localizer["Documentation"]</span></h3>
        <p class="m3 p4">
            <span class="back-static">
                @Localizer["The Technical Documentation provides developers with a comprehensive foundation. Its content includes basic NEO knowledge and client manuals to help new developers get started; development tools, Smart Contract examples & API documentation suitable for intermediate developers; and more."]<br />
                @Localizer["If you are a Blockchain Developer or wish to learn more technical details on NEO, head to the Developer's Guide in the Documentation. It helps readers to quickly start participating in the construction of NEO ecosystem's infrastructures."]
            </span>
        </p>
        <p>
            <a class="p4 green-text" href="https://docs.neo.org/zh-cn/whitepaper.html">@Localizer["Whitepaper"]</a>
            <a class="p4 green-text" href="https://docs.neo.org/zh-cn/basic/consensus/whitepaper.html">@Localizer["Consensus"]</a>
            <a class="p4 green-text" href="https://docs.neo.org/zh-cn/exchange/v2.9.4.html">@Localizer["Exchange Integration"]</a>
        </p>
        <p>
            <a class="btn-static" href="https://docs.neo.org/">@Localizer["Technical Documents"]</a><br />
            <a class="btn-static" href="https://docs.neo.org/developerguide/index.html">@Localizer["Developer Guide"]</a>
        </p>
    </div>
</div>

