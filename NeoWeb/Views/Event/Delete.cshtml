@model NeoWeb.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}
<div class="container">
    <h3 class="mt-3">Are you sure you want to delete this?</h3>

    <div class="mt-2">
        @Html.DisplayFor(model => model.ChineseName)
    </div>
    <div class="mt-2">
        @Html.DisplayFor(model => model.EnglishName)
    </div>
    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-light" /> |
            <a asp-action="details" asp-route-id="@Model.Id">Back to Event</a>
        </form>
    </div>
</div>