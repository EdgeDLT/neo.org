@model NeoWeb.Models.News

@{
    ViewData["Title"] = "Delete News";
}
<p class="mt-4">Are you sure you want to delete this?</p>
<p class="mt-4 w600">@Html.DisplayFor(model => model.ChineseTitle)</p>
<p class="mt-4 w600">@Html.DisplayFor(model => model.EnglishTitle)</p>
<div class="mt-4">
    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="my-4">
                <input type="submit" value="Delete" class="btn mt-4" />
            </div>
            <div class="my-4">
                <a asp-controller="discover" asp-action="index">Back to List</a>
            </div>
        </form>
    </div>
</div>
