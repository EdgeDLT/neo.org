@model NeoWeb.Models.Candidate
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = Localizer["Migration"].Value;
}

@section Styles{
    <link rel="stylesheet" href="@Helper.ToCDN("/css/migration.min.css", true)" />
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="uppercase mt-5">@Localizer["Migration"]</h1>
            <p>@Localizer["After four years of stable MainNet operation, Neo is undergoing it's biggest evolution as it migrates to N3 - The most powerful and feature rich version of the Neo blockchain to date."]</p>
        </div>
        <div class="col-md-4 offset-md-2">
            <img class="img-fluid" src="~/images/home/N3Logo.svg" />
        </div>
    </div>
    <hr />
    <h2 class="mt-5">@Localizer["What is N3?"]</h2>
    <h3 class="mt-5">@Localizer["A whole new world"]</h3>
    <p>@Localizer["<strong>N3</strong> is the latest version of the Neo blockchain. It was first announced in 2018 by Erik Zhang as an upgrade to the current Neo protocol. "]</p>
    <p>@Localizer["<strong>N3</strong> improves on previous versions by offering an improved development experience. It boasts more powerful and complete features, a highly modular architecture, and an enhanced governance and economic model. It offers everything the hobbyist developer needs to build their first dApp, through to the power and scalability required by enterprise applications."]</p>
    <p>@Localizer["Due to the extent of improvements found in version <strong>N3</strong>, certain features are not backwards compatible with the existing Neo Legacy blockchain. This means that Neo's <strong>N3</strong> upgrade will be implemented through a new genesis block. The Neo blockchain running <strong>N3</strong> will coexist alongside the current Neo Legacy blockchain for an extended period of time. This will provide users with ample opportunity to migrate their tokens and applications to the new chain."]</p>
    <p><strong>@Localizer["At this moment, no action is required on the part of token holders. "]</strong></p>
    <p>@Localizer["When the new chain is closer to a MainNet launch, Neo will publish detailed information on how to safely migrate your assets from the Legacy to <strong>N3</strong> version of Neo."]</p>

    <h3 class="mt-5 border-bottom">@Localizer["New features in N3"]</h3>
    <div class="row my-5">
        <div class="col-sm-6 col-md-4">
            <img class="img-fluid" src="~/images/migration/feature1.png" />
            <div class="d-inline-block align-middle">Built in oracle<br />(internet resource access)</div>
        </div>
        <div class="col-sm-6 col-md-4">
            <img class="img-fluid" src="~/images/migration/feature1.png" />
            <div class="d-inline-block align-middle">Built in oracle<br />(internet resource access)</div>
        </div>

        <div class="col-sm-6 col-md-4">
            <img class="img-fluid" src="~/images/migration/feature1.png" />
            <div class="d-inline-block align-middle">Built in oracle<br />(internet resource access)</div>

        </div>

        <div class="col-sm-6 col-md-4">
            <img class="img-fluid" src="~/images/migration/feature1.png" />
            <div class="d-inline-block align-middle">Built in oracle<br />(internet resource access)</div>
        </div>

        <div class="col-sm-6 col-md-4">
            <img class="img-fluid" src="~/images/migration/feature1.png" />
            <div class="d-inline-block align-middle">Built in oracle<br />(internet resource access)</div>
        </div>

        <div class="col-sm-6 col-md-4">
            <img class="img-fluid" src="~/images/migration/feature1.png" />
            <div class="d-inline-block align-middle">Built in oracle<br />(internet resource access)</div>
        </div>
    </div>
    <h3 class="mt-5 border-bottom">@Localizer["Timeline"]</h3>
    <img src="~/images/migration/timeline.png" class="img-max my-5" />
    <h3 class="my-5 border-bottom">@Localizer["Frequently asked questions"]</h3>
    <div id="accordion">
        <div class="my-4">
            <h5>
                @Localizer["Why is Neo launching a new chain?"]
                <i class="iconfont sub" style="display: block">&#xe62c;</i>
                <i class="iconfont add" style="display: none">&#xe603;</i>
            </h5>
            <p class="my-4" style="display: block;">
                @Localizer["Some of the major improvments found in <strong>N3</strong>, such as the removal of UTXO assets in favour of an account model, are not compatible with the Legacy version of the Neo blockchain. In order to provide the best possible blockchain platform and developer experience, it is necessary to launch the <strong>N3</strong> version from a new genesis block."]
            </p>
        </div>
        <div class="my-4">
            <h5>
                @Localizer["Will I need to migrate my NEO & GAS tokens from the current Neo Legacy to Neo N3?"]
                <i class="iconfont sub">&#xe62c;</i>
                <i class="iconfont add">&#xe603;</i>
            </h5>
            <p class="my-4">
                @Localizer["aa"]
            </p>
        </div>
        <div class="my-4">
            <h5>
                @Localizer["Will I need to migrate my NEP-5 tokens from the current Neo Legacy to Neo N3?"]
                <i class="iconfont sub">&#xe62c;</i>
                <i class="iconfont add">&#xe603;</i>
            </h5>
            <p class="my-4">
                @Localizer["aa"]
            </p>
        </div>
        <div class="my-4">
            <h5>
                @Localizer["Where will I find instructions on how to complete the migration safely?"]
                <i class="iconfont sub">&#xe62c;</i>
                <i class="iconfont add">&#xe603;</i>
            </h5>
            <p class="my-4">
                @Localizer["aa"]
            </p>
        </div>
        <div class="my-4">
            <h5>
                @Localizer["When do I have to do the migration? How long do I have to complete the migration?"]
                <i class="iconfont sub">&#xe62c;</i>
                <i class="iconfont add">&#xe603;</i>
            </h5>
            <p class="my-4">
                @Localizer["aa"]
            </p>
        </div>
        <div class="my-4">
            <h5>
                @Localizer["When do I have to do the migration? How long do I have to complete the migration?"]
                <i class="iconfont sub">&#xe62c;</i>
                <i class="iconfont add">&#xe603;</i>
            </h5>
            <p class="my-4">
                @Localizer["aa"]
            </p>
        </div>
        <div class="my-4">
            <h5>
                @Localizer["Will trading on exchanges be interupted?"]
            <i class="iconfont sub">&#xe62c;</i>
            <i class="iconfont add">&#xe603;</i>
        </h5>
        <p class="my-4">
            @Localizer["aa"]
        </p>
    </div>
</div>
</div>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <environment include="Development">
        <script src="/js/migration.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="@Helper.ToCDN("/js/migration.min.js", true)"></script>
    </environment>
    <script>
        $("#accordion h5").click(function () {
            var currentP = $(this).parent().find("p");
            var currentI = $(this).parent().find(".iconfont");
            $("#accordion").find("p").not(currentP).hide("fast");
            $("#accordion").find(".sub").not(currentI).hide("fast");
            $("#accordion").find(".add").not(currentI).show("fast");

            currentP.toggle("fast");
            currentI.toggle("fast");
        });
    </script>
}
