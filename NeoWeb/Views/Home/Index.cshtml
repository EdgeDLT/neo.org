@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@section Styles{
    <environment include="Development">
        <link href="/css/homepage.css" rel="stylesheet" />
        <link href="/lib/animate.css/animate.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        @*<link href="@Helper.CDN/css/homepage.min.css?v=20181221" rel="stylesheet" />
            <link href="@Helper.CDN/lib/animate.css/animate.min.css?v=20181109" rel="stylesheet" />*@
    </environment>
    <link href="~/lib/Swiper/css/swiper.min.css" rel="stylesheet"/>
}

@* 基本块 - Home page *@
<div class="home-page-content" id="homeFri">
    <div class="row">
        <div class="midpoint home-text-fir">
            <h1><span class="back-static p3 lh3">NEO</span></h1>
            <h3 class="m3"><span class="back-static p3 lh3">@Localizer["NEO - An Open Network For Smart Economy"]</span></h3>
            <div class="m2"><span class="back-static p2"><a class="btn-static t3">NEO Devcon</a></span></div>
        </div>
    </div>
</div>

<div class="home-page-content home-intro">
    <div class="container text-center w600">
        <h2 class="m1">@Localizer["What is NEO"]</h2>
        <div class="m2">
            @Localizer["NEO is a non-profit community-driven blockchain project. It utilizes blockchain technology and digital identity to digitize assets and automate the management of digital assets using smart contracts. Using a distributed network, it aims to create a \"Smart Economy\"."]<br />
            @Localizer["NEO was founded in 2014 and was open sourced on GitHub in June 2015. NEO believes that community development is its top priority. NEO has a huge developer community around the world, such as CoZ, NEL and NeoResearch, who continuously contribute to NEO development. Millions of community members are active on Reddit, Discord, Github and Twitter."]
        </div>
    </div>
    <div class="container">
        <div class="row wow fadeIn" data-wow-duration="1s" data-wow-delay="0.5s">
            <div class="col-sm-12 green-text m1 h2 bold-font">
                <span>@Localizer["Digital Assets"]</span> + <span>@Localizer["Digital Identity"]</span> + <span>@Localizer["Smart Contract"]</span><br />
                = <span class="green-text">@Localizer["Smart Economy"]</span>
            </div>
        </div>
        <div class="swiper-container text-center m2 t3">
            <div class="swiper-wrapper gray-text">
                <div class="swiper-slide p2">
                    <img src="@Helper.CDN/images/coin.svg" /><br />
                    @Localizer["The technology underlying NEO supports multiple types of digital assets. Users can register, transfer and trade at will on NEO."]
                </div>
                <div class="swiper-slide p2">
                    <img src="@Helper.CDN/images/coin.svg" /><br />
                    @Localizer["The technology underlster, transfer and trade at will on NEO."]
                </div>
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center">@Localizer["NEO Technical Features"]</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/coin.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["The technology underlying NEO supports multiple types of digital assets. Users can register, transfer and trade at will on NEO."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/bank.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Digital certificates are supported, placing trust into the public chain. This provides full legal protection for all assets digitized through the NEO platform."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/networking.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Facilitate P2P exchange of digital assets. Buyers and sellers of digital assets and currencies will be handled peer-to-peer without the need for third party exchanges."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/contract.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Turing-complete smart contract, which will have high certainty and finality, support parallel operation, sharding and unlimited scalability when run in NeoVM."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/startup.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["NeoContract supports multiple programming languages such as C#, Java, and Python. Developers can rapidly develop smart contracts based on the NEO platform without learning a unique language."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/think.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Neo Virtual Machine (NeoVM): NEO's lightweight stack-based virtual machine provides shorter startup times with efficient execution. Deterministic calling tree-technology allows NEO to achieve unlimited theoretical scalability."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/teamwork.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Consensus nodes use Byzantine Fault Tolerance Algorithm to reach consensus and ensure the finality of transactions. It also ensures that the system keeps its finality and availability as long as Byzantine fault occurs on less than 1/3 of the nodes."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/networking2.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Comprises Cross-chain Assets Swap Protocol and Cross-chain distributed transaction protocol and can achieve atomic assets swap and guarantee the operation consistency of smart contracts executed on different chains."]</div>
                        </div>
                    </div>
                    <div class="col-md-4 tech-item">
                        <div class="row">
                            <div class="col-2 col-md-12 text-center"><img src="@Helper.CDN/images/flask.svg" /></div>
                            <div class="col-10 col-md-12">@Localizer["Introduced Lattice cryptography-based signing and encryption technique to avoid quantum crisis by Turing encryption and decryption problem into the Shortest Vector Problem (SVP), which cannot be solved by current quantum computers."]</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="home-page-content home-client">
    <div class="container home-detail">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6 p2">
                <h2 class="m2">@Localizer["NEO Client"]</h2>
                <p class="t2 m2 back-white">
                    @Localizer["The NEO Team and community have created various wallets for different platforms. You can download the wallets or access the web wallets below."]
                </p>
                <p class="m3"><a class="btn-static btn1 t3" href="~/client" target="_blank">@Localizer["Go to client page"]</a></p>
                <p class="home-down-tab m3">
                    <a class="iconfont" title="@Localizer["Desktop"]" href="~/client#1" target="_blank">&#xe632;</a>
                    <a class="iconfont" title="@Localizer["Mobile"]" href="~/client#2" target="_blank">&#xe64b;</a>
                    <a class="iconfont" title="@Localizer["Web"]" href="~/client#3" target="_blank">&#xe63c;</a>
                    <a class="iconfont" title="@Localizer["Hardware"]" href="~/client#4" target="_blank">&#xe688;</a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="home-page-content home-deve text-white">
    <div class="container p1">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="m2">@Localizer["If you are a developer"]</h2>
                <p class="t2 m3 p2">@Localizer["Participate in our project, get NEO and GAS for development testing, or view our technical documentation"]</p>
                <ul class="t2 bold-font">
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
                <a class="btn-static btn2 t3" href="~/dev">@Localizer["Go to developer page"]</a>
            </div>
        </div>
    </div>
</div>

<div class="home-page-content back-color home-blog-event">
    <div class="container home-detail zindex">
        <h2 class="m1">@Localizer["Blog & Event"]</h2>
        <div class="row text-left m2">
            <div class="col-md-6">
                @if (ViewBag.Blog != null)
                {
                    foreach (var item in ViewBag.Blog as IEnumerable<NeoWeb.Models.Blog>)
                    {
                        <div class="blog-con border-static back-white m3 p3">
                            <p class="bolder-font">@item.Title</p>
                            <p class="m4 gray-text">@item.Summary.Substring(0, Math.Min(item.Summary.Length, 100))…</p>
                            <p class="m4"><i class="iconfont t2 green-text">&#xe64c;</i> @item.EditTime.ToString()</p>
                        </div>
                    }
                }
                <p class="m3 text-center"><a class="btn-static t3" href="~/dev">@Localizer["Blog Page"]</a></p>
            </div>
            <div class="col-md-6 m3">
                @if (ViewBag.Event != null)
                {
                    foreach (var item in ViewBag.Event as IEnumerable<NeoWeb.Models.Event>)
                    {
                        <div class="event-con border-static back-white p3">
                            @if (string.IsNullOrEmpty(item.Cover))
                            {
                                <p class="m4"><img src="@String.Format(Helper.CDN + "/images/event/{0}.jpg", item.Type).ToLower()" width="100%" /></p>
                            }
                            else
                            {
                                <p class="m4"><img src="@String.Format("/upload/{0}", item.Cover).ToLower()" width="100%" /></p>
                            }
                            <p class="m4 bolder-font">@item.Name</p>
                            <p class="m4 lh3 gray-text">
                                <i class="iconfont t2 green-text">&#xe64c;</i> @item.StartTime.ToString() ~ @item.EndTime.ToString()<br />
                                <i class="iconfont t2 green-text">&#xe64e;</i> @item.Country?.ZhName - @item.City<br />
                                <i class="iconfont t2 green-text">&#xe60b;</i> Organizers: @item.Organizers<br />
                            </p>
                            <a class="btn-static btn3 m3" href="/event/details/@item.Id">More</a>
                        </div>
                    }
                }
                <p class="m3 text-center"><a class="btn-static t3" href="~/dev">@Localizer["Event Page"]</a></p>
            </div>
        </div>
    </div>
    
    <div class="container home-comm">
        <h2 class="m1 p1">@Localizer["Community"]</h2>
        <ul class="comm-ul">
            <li class="p3"><a><img src="~/images/community/coz.png" /></a></li>
            <li class="p3"><a><img src="~/images/community/nel.png" /></a></li>
            <li class="p3"><a><img src="~/images/community/nnt.png" /></a></li>
            <li class="p3"><a><img src="~/images/community/neor.png" /></a></li>
            <li class="p3"><a><img src="~/images/community/neoone.png" /></a></li>
            <li class="p3"><a><img src="~/images/community/red.png" /></a></li>
        </ul>
    </div>
</div>

@section Scripts{
    <script src="@Helper.CDN/lib/wow/wow.min.js"></script>
    <script src="@Helper.CDN/js/skrollr.min.js"></script>
    <script src="~/lib/Swiper/js/swiper.min.js"></script>
    <script>
        var swiper = new Swiper('.swiper-container', {
            slidesPerView: 4,
            spaceBetween: 50,
            pagination: {
                el: '.swiper-pagination',
                dynamicBullets: true,
                clickable: true,
            },
            breakpoints: {
                1024: {
                    slidesPerView: 3,
                    spaceBetween: 20,
                },
                768: {
                    slidesPerView: 2,
                    spaceBetween: 10,
                },
                480: {
                    slidesPerView: 1,
                    spaceBetween: 15,
                }
            }
        });
    </script>
    <script>
        window.onload = function () {
            pageSize();
            navColor();
            new WOW().init();

            if (!/Mobile|Windows Phone|Lumia|Android|webOS|iPhone|iPod|Blackberry|PlayBook|BB10|Opera Mini|\bCrMo\/|Opera Mobi/i.test(navigator.userAgent)) {
                skrollr.init({
                    edgeStrategy: 'set',
                    easing: {
                        WTF: Math.random,
                        inverted: function (p) {
                            return 1 - p;
                        }
                    }
                });
            }
            //兼容IE调整
            $("body").css("height", "auto");
        }

        $(window).resize(function () {
            pageSize();
        });
        $(document).scroll(function () { navColor() });


        function pageSize() {
            $("#homeFri").each(function () {
                $(this).css("width", $(window).width());
                $(this).css("min-height", $(window).height());
            })
        }
        $("#menu_list a").css("border-bottom", "none")
        $("#menu_list li.nav-item [href='/']").css("border-bottom", "2px solid #58bf00")

        function navColor() {
            var scrnum = $(document).scrollTop();
            var $nav = $(".navbar");
            if (scrnum <= 100) {
                $nav.removeAttr('style');
            } else {
                $nav.css("background", "rgba(228,228,228,0.95)")
            }
        }
    </script>
}
