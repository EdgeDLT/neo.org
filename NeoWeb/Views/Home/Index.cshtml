@model List<DiscoverViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@section Styles{
    <environment include="Development">
        <link rel="stylesheet" href="/css/homepage.css" asp-append-version="true" />
        <link rel="stylesheet" href="/lib/animate.css/animate.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="@Helper.ToCDN("/css/homepage.min.css", true)" />
        <link href="@Helper.ToCDN("/lib/animate.css/animate.min.css")" rel="stylesheet" />
    </environment>
    <link href="@Helper.ToCDN("/lib/Swiper/css/swiper.min.css")" rel="stylesheet" />
}

@* 基本块 - Home page *@
<div id="homeFri">
    <div class="container p1">
        <div class="row mt1">
            <div class="col-md-12">
                <h3>
                    Join the<br />
                    <span class="h1 typetext">Most developer-friendly</span><br />
                    network of blockchain solution
                </h3>
                <div class="mt4">
                    <a asp-controller="about" asp-action="index" class="btn">LEARN MORE</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container p2">
    <div class="row">
        <div class="col-md-6">
            <h2>Turn your vision into reality with NEO</h2>
        </div>
        <div class="col-md-6">
            <p class="mt6">
                As the most-developer friendly platform, NEO is supporting 70-plus dAPPs with its comprehensive suite of tools and resources, ranging from DevPack and NeoContract to off and online training sessions
            </p>
            <a asp-controller="dev" asp-action="index" class="btn mt4">GET STARTED</a>
        </div>
    </div>
</div>
<div class="b3">
    <div class="container">
        <div class="row list3">
            <div class="col-md-4">
                <span class="green">
                    Mainstream
                    Languages
                </span>
                <ul class="list-ul">
                    <li>c#</li>
                    <li>Python</li>
                    <li>Java</li>
                    <li>JavaScript</li>
                    <li>Go</li>
                </ul>
            </div>
            <div class="col-md-4">
                <span class="green">Highly Active Network</span>
                <ul class="list-ul list-inline">
                    <li>2,000,000 +<span>Wallet Address</span></li>
                    <li>1,000,000 +<span>Media Follower</span></li>
                    <li>100 +<span>dApps</span></li>
                    <li>1,000 +<span>Contributor</span></li>
                </ul>
            </div>
            <div class="col-md-4">
                <span class="green">Global Neo Communities</span>
                <ul class="list-ul list-inline">
                    <li>20<span>Cities</span></li>
                    <li>7<span>Countries</span></li>
                    <li>3,800 +<span>Community members</span></li>
                    <li>60 +<span>Meetups</span></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="module mt3 p3">
        <h2 class="module-text">NEO’s Ecosystem</h2>
        <img class="module-img" data-original="/images/home/Ecosystem.svg" />
        <div class="module-text">
            <p class="mt5">Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. </p>
            <p class="mt4"><a asp-controller="eco" asp-action="index" class="btn">LEARN MORE</a></p>
        </div>
    </div>
</div>

<div class="module1 bg1">
    <div class="container p2">
        <div class="row">
            <div class="col-md-5"></div>
            <div class="col-md-7">
                <h2>Partner with us and power up for success</h2>
                <p class="mt5">NEO is investing USD100million through its EcoBoost initiative to accelerate the realization of  large-scale commercial blockchain solutions by empowering our developers and dAPPs</p>
                <p class="mt4"><a asp-controller="eco" asp-action="ecoboost" class="btn1">LEARN MORE</a></p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="module mt2">
        <img class="module-img" data-original="/images/home/GetWallet.svg" />
        <div class="module-text">
            <h2>Get a NEO Wallet today, and take control of your assets!  </h2>
            <p class="mt4"><a asp-controller="client" asp-action="index" class="btn">GET WALLET</a></p>
        </div>
    </div>
</div>

<div class="container mt1">
    <h2>Discover<a asp-controller="discover" asp-action="index" class="btn2">View More</a></h2>
    <div class="row list2">
        @{await Html.RenderPartialAsync("_DiscoverPartial", Model);}
    </div>
</div>
<div class="mt1"></div>

@section Scripts{
    <script src="~/js/typetext.js"></script>
    <script>
        pageSize();
        $(window).resize(function () {
            pageSize();
        });

        function pageSize() {
            $("#homeFri").each(function () {
                $(this).css("width", $(window).width());
                $(this).css("min-height", $(window).height());
            })
        }
    </script>
}

