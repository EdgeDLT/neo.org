                        <div data-page="9" class="circle"></div>
                        <div data-page="10" class="circle"></div>
                        <div data-page="11" class="circle"></div>
                    </div>
                    <div id="next" style="cursor: pointer;">
                        <img class="bottom-guide-container-icon arrow-show" src="@Helper.CDN/images/tour/next_arrow.png" />
                        <img class="bottom-guide-container-icon arrow-hide" src="@Helper.CDN/images/tour/next_arrow_grey.png" />
                    </div>
                </div>
            </div>
        </div>

        <div class="right-container">
            <div class="neo-logo-mobile hide-in-desktop">
                <img src="@Helper.CDN/images/logo files-dark.svg" class="neo-logo-mobile-image">
            </div>
            <div class="carouselImgs slide0">
                <img class="carouse-pic" src="@Helper.CDN/images/tour/tour0.png" />
