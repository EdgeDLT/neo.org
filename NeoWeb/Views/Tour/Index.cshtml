@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=s, initial-scale=1.0">
    <link rel="stylesheet" href="@Helper.ToCDN("/css/site.min.css", true)">
    <link rel="stylesheet" href="@Helper.ToCDN("/css/tour.min.css", true)">
    <style>
        @@font-face {
            font-family: 'WorkSans-Bold'; /* project id 1408484 */
            src: url('/font/WorkSans-Bold.ttf');
        }

        @@font-face {
            font-family: 'WorkSans-Regular'; /* project id 1408484 */
            src: url('/font/WorkSans-Regular.ttf');
        }

        @@font-face {
            font-family: 'WorkSans-SemiBold'; /* project id 1408484 */
            src: url('/font/WorkSans-SemiBold.ttf');
        }
    </style>
    <title>N3 TOUR</title>
</head>

<body>
    <div class="tour-container">
        <div class="left-container">
            <div class="left-container-content">
                <div class="tour-left-logo hide-in-mobile">
                    <a href="https://neo.org/">
                        <img src="@Helper.CDN/images/tour/neo_color_dark.png" class="tour-left-logo-img" />
                    </a>
                </div>
                <div class="text-guide">
                    <div class="text-group text-guide-1 fade-in">
                        @*<div class="N3-logo-container">
                                <img src="@Helper.CDN/images/tour/N3_Logo.png" class="N3-logo"/>
                            </div>*@
                        <div class="text-group-head text-group-1-head1">
                            <span>
                                @Localizer["YOU DIN'T KNOW"]
                            </span>
                            <br />
                            <span style="color: #000033">
                                @Localizer["IT WAS THIS GOOD"]
                            </span>
                        </div>
                        <div class="text-group-content text-group-1-text">
                            @Localizer["After four years of stable MainNet operation, Neo is undergoing its biggest evolution as it migrates to N3 - the most powerful and feature rich version of the Neo blockchain to date."]
                        </div>
                        <div class="start-mobile-wrapper">
                            <div id="start">
                                @Localizer["START TOUR"]
                            </div>
                        </div>
                    </div>
                    <div class="text-group text-guide-2 fade-out">
                        <div class="text-group-head text-group-2-head1">
                            <span>
                                @Localizer["MULTI LANGUAGE"]
                            </span>
                            <br />
                            <span style="color: #000033">
                                @Localizer["SUPPORT"]
                            </span>
                        </div>
                        <div class="text-group-content text-group-2-text text-group-border">
                            @Localizer["Hit the ground running with a language you already know and love."]
                            <br /><br />
                            @Localizer["As with any new paradigm, blockchain development comes with a learning curve.Rather than introducing additional overhead, Neo helps developers by integrating seamlessly with the world's most widely used languages and tools."]
                        </div>
                        @*<div class="text-group-logo">
                                <img src="@Helper.CDN/images/tour/N3_Logo.png" class="text-group-logo-img" />
                                <img src="@Helper.CDN/images/tour/N3_Logo.png" class="text-group-logo-img" />
                                <img src="@Helper.CDN/images/tour/N3_Logo.png" class="text-group-logo-img" />
                                <img src="@Helper.CDN/images/tour/N3_Logo.png" class="text-group-logo-img" />
                                <img src="@Helper.CDN/images/tour/N3_Logo.png" class="text-group-logo-img" />
                            </div>*@
                        <div class="text-group-content text-group-text-2">
                            @Localizer["Learn more about Neo's multi-language support"]
                            <div class="text-group-icon">
                                <img class="direction" src="@Helper.CDN/images/tour/direct.png" />
                            </div>
                        </div>
                    </div>
                    <div class="text-group text-guide-3 fade-out">
                        <div class="text-group-head text-group-3-head1">
                            <span>
                                @Localizer["DECENTRALIZED"]
                            </span><br />
                            <span style="color: #000033">
                                @Localizer["STORAGE"]
                            </span>
                        </div>
                        <div class="text-group-content text-group-3-text text-group-border">
                            @Localizer["NeoFS: Your data, securely encrypted wherever you want it, and available whenever you need it."]
                            <br /><br />
                            @Localizer["Phase out centralized depencies or simply bring your operational costs down with the most reliable and performant decentralized storage solution.With HTTP and S3 gateways, no rearchitecting is required to integrate existing applications or users with NeoFS."]
                        </div>
                        <div class="text-group-content text-group-text-2">
                            @Localizer["Learn more about the NeoFS network"]
                            <div class="text-group-icon">
                                <img class="direction" src="@Helper.CDN/images/tour/direct.png" />
                            </div>
                        </div>
                        @*<div class="text-group-content text-group-3-text-2">
                                Learn how to build dApps in your language 2
                                <div class="text-group-icon">
                                    <img class="direction" src="@Helper.CDN/images/tour/direct.png"/>
                                </div>
                            </div>
                            <div class="text-group-content text-group-3-text-2">
                                Learn how to build dApps in your language 2
                                <div class="text-group-icon">
                                    <img class="direction" src="@Helper.CDN/images/tour/direct.png"/>
                                </div>
                            </div>*@
                    </div>
                    <div class="text-group text-guide-4 fade-out">
                        <div class="text-group-head text-group-4-head1">
                            <span>
                                @Localizer["NATIVE"]
                            </span><br />
                            <span style="color: #000033">
                                @Localizer["ORACLES"]
                            </span>
                        </div>
                        <div class="text-group-content text-group-4-text text-group-border">
                            @Localizer["With Neo's native oracle service, it becomes trivial for developers to tap into any external resources."]
                            <br /><br />
                            @Localizer["Smart contracts are a revolutionary tool, but their usefulness is naturally limited by the data they can access.The native oracle service introduced in N3 allows developers to access rich off - chain data sources through HTTPS or NeoFS requests, opening up new opportunities to create valuable decentralized services."]
                        </div>
                        <div class="text-group-content text-group-text-2">
                            @Localizer["Learn more about Neo's native oracles"]
                            <div class="text-group-icon">
                                <img class="direction" src="@Helper.CDN/images/tour/direct.png" />
                            </div>
                        </div>
                    </div>
                    <div class="text-group text-guide-5 fade-out">
                        <div class="text-group-head text-group-5-head1">
                            <span>
                                @Localizer["SELF-SOVEREIGN"]
                            </span><br />
                            <span style="color: #000033">
                                @Localizer["IDENTITY"]
                            </span>
                        </div>
                        <div class="text-group-content text-group-5-text text-group-border">
                            @Localizer["While some decentralized applications can be freely invoked by anyone, others may require an extra level of authentication. With Neo's digital identity tools, apps can integrate the precise level of verification they need to function correctly while users remain in full control over their private data."]
                        </div>
                        <div class="text-group-content text-group-text-2">
                            @Localizer["Learn more about NeoID"]
                            <div class="text-group-icon">
                                <img class="direction" src="@Helper.CDN/images/tour/direct.png" />
                            </div>
                        </div>
                    </div>
                    <div class="text-group text-guide-6 fade-out">
                        <div class="text-group-head text-group-6-head1">
                            <span>
                                @Localizer["NATIVE NAME"]
                            </span><br />
                            <span style="color: #000033">
                                @Localizer["SERVICE"]
                            </span>
                        </div>
                        <div class="text-group-content text-group-6-text text-group-border">
                            @Localizer["Neo makes it easy for users to interact with the next generation of decentralized services."]
                            <br /><br />
                            @Localizer["Neo's native name service provides domain-mapping for a number of record types. Powered by NFTs to enable open trading, NNS functions as both a redirection service for NeoFS-based app frontends and as an alias service to replace hard-to-use public addresses. "]
                        </div>
                        <div class="text-group-content text-group-text-2">
                            @Localizer["Learn more about Neo's native domain service"]
                            <div class="text-group-icon">
                                <img class="direction" src="@Helper.CDN/images/tour/direct.png" />
                            </div>
                        </div>
                    </div>
                    <div class="text-group text-guide-7 fade-out">
                        <div class="text-group-head text-group-7-head1">
                            <span>
                                @Localizer["ADVANCED"]
                            </span><br />
                            <span style="color: #000033">
                                @Localizer["INTEROPERBILITY"]
                            </span>
                        </div>
                        <div class="text-group-content text-group-7-text text-group-border">
                            @Localizer["As a founding member of the interoperability protocol alliance Poly Network, Neo makes cross-chain interaction as easy as a native transaction. "]
                            <br /><br />
                            @Localizer["Connected with an ever - growing list of other blockchains, applications on Neo are not limited to interacting with native assets or contracts, but can easily tap into resources from heterogenous networks."]
                        </div>
                        <div class="text-group-content text-group-text-2">
                            @Localizer["Learn more about Neo's Poly Network Integration"]
                            <div class="text-group-icon">
                                <img class="direction" src="@Helper.CDN/images/tour/direct.png" />
                            </div>
                        </div>
                    </div>
                    <div class="text-group text-guide-8 fade-out">
                        <div class="text-group-head text-group-8-head1">
                            <span>
                                @Localizer["ONE BLOCK"]
                            </span><br />
                            <span style="color: #000033">
                                @Localizer["FINALITY"]
                            </span>
                        </div>
                        <div class="text-group-content text-group-8-text text-group-border">
                            @Localizer["Neo's fork-proof dBFT consensus makes it the most powerful settlement engine in the world."]
                            <br /><br />
                            @Localizer["Neo was the first truly immutable blockchain.With majority approval between consensus nodes required for each new block, transactions on Neo are given immediate, irrevocable finality as soon as they are added to the blockchain.Neo's landmark dBFT consensus mechanism sparked a growing trend of adoption for BFT-based mechanisms across the industry."]
                        </div>
                        <div class="text-group-content text-group-text-2">
                            @Localizer["Learn more about Neo's dBFT Consensus Mechanism"]
                            <div class="text-group-icon">
                                <img class="direction" src="@Helper.CDN/images/tour/direct.png" />
                            </div>
                        </div>
                    </div>
                    <div class="text-group text-guide-9 fade-out">
                        <div class="text-group-head text-group-9-head1">
                            <span>
                                @Localizer["DUAL TOKEN"]
                            </span><br />
                            <span style="color: #000033">
                                @Localizer["MODEL"]
                            </span>
                        </div>
                        <div class="text-group-content text-group-9-text text-group-border">
                            @Localizer["Neo seperates governance from utility with two tokens - NEO & GAS."]
                            <br /><br />
                            @Localizer["You wouldn't use your Starbucks shares to buy a cup of coffee, so why spend your share of the blockchain on transaction fees? NEO tokens represents ownership of the network, while GAS is used to pay for all operations and services. NEO holders can participate in governance and recieve distribution of GAS tokens to spend on the blockchain."]
                            <br /><br />
                            @Localizer["With a fixed supply of 100M and no divisibility, NEO is one of the most scarce crypto assets."]
                        </div>
                        <div class="text-group-content text-group-text-2">
                            @Localizer["Learn more about NEO & GAS"]
                            <div class="text-group-icon">
                                <img class="direction" src="@Helper.CDN/images/tour/direct.png" />
                            </div>
                        </div>
                    </div>
                    <div class="text-group text-guide-10 fade-out">
                        <div class="text-group-head text-group-10-head1">
                            <span>
                                @Localizer["BEST IN CLASS"]
                            </span><br />
                            <span style="color: #000033">
                                @Localizer["TOOLING"]
                            </span>
                        </div>
                        <div class="text-group-content text-group-10-text text-group-border">
                            @Localizer["Neo's goal has always been to be the most developer friendly platform."]
                            <br /><br />
                            @Localizer["The crown jewel of Neo's developer experience is the Neo Blockchain Toolkit for VS Code. Built by Microsoft-alumni at NGD Enterprise, the toolkit offers industry best tools for easy network deployment, testing, and smart contract debugging. "]
                            <br /><br />
                            @Localizer["Neo also boasts many other powerful community-built SDKs, compilers, code examples, and resources for all supported languages, including C#, Python, TypeScript, Java, and Golang."]
                            <br /><br />
                            @Localizer["We're happy to do a bake-off with anyone. Seriously."]
                        </div>
                        <div class="text-group-content text-group-text-2">
                            @Localizer["Start exploiting Neo's developer resources"]
                            <div class="text-group-icon">
                                <img class="direction" src="@Helper.CDN/images/tour/direct.png" />
                            </div>
                        </div>
                    </div>
                    <div class="text-group text-guide-11 fade-out">
                        <div class="text-group-head text-group-11-head1">
                            <span>
                                @Localizer["JUMP"]
                            </span><br />
                            <span style="color: #000033">
                                @Localizer["RIGHT IN"]
                            </span>
                        </div>
                        <div class="text-group-content text-group-11-text text-group-border" style="border-bottom: 0px;">
                            @Localizer["The wait is finally over, N3 is here. It’s time to change the world with the most powerful and feature-rich smart contract platform."]
                            <br /><br />
                            @Localizer["Hop into our developer quickstart guides and example libraries to begin building your decentralized application on Neo."]
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottom-guide" id="bottom-guide">
                @*<div class="bottom-title">
                        @Localizer["Main website"]
                        <div class="text-group-icon">
                            <img class="direction" src="@Helper.CDN/images/tour/direct.png" />
                        </div>
                    </div>*@
                <div class="hide" id="bottom-guide-container">
                    <div id="prev" style="cursor: pointer;">
                        <img class="bottom-guide-container-icon arrow-show" src="@Helper.CDN/images/tour/previous_arrow.png" />
                        <img class="bottom-guide-container-icon arrow-hide" src="@Helper.CDN/images/tour/previous_arrow_grey.png" />
                    </div>
                    <div class="circle-list">
                        <div data-page="1" class="circle"></div>
                        <div data-page="2" class="circle"></div>
                        <div data-page="3" class="circle"></div>
