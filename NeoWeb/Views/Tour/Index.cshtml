                </div>
            </div>
            <div class="carouselImgs fade-out  slide6">
                <img class="carouse-pic" src="@Helper.CDN/images/tour/tour6.png" />
                <div class="right-corner">
                    <img class="right-corner-pic" src="@Helper.CDN/images/tour/corner.png" />
                </div>
            </div>
            <div class="carouselImgs fade-out  slide7">
                <img class="carouse-pic" src="@Helper.CDN/images/tour/tour7.png" />
                <div class="right-corner">
                    <img class="right-corner-pic" src="@Helper.CDN/images/tour/corner.png" />
                </div>
            </div>
            <div class="carouselImgs fade-out  slide8">
                <img class="carouse-pic" src="@Helper.CDN/images/tour/tour8.png" />
